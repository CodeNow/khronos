{
  "name": "khronos",
  "version": "2.2.0",
  "description": "Task Runner for various Runnable operations",
  "main": "index.js",
  "bin": "./bin/cli.js",
  "scripts": {
    "check-coverage": "istanbul check-coverage && echo 'Coverage check successful!'",
    "coverage": "NODE_PATH=./lib istanbul cover ./node_modules/.bin/_mocha -- $npm_package_options_mocha test/unit",
    "dry": "NODE_ENV=staging MANUAL_RUN=true DEBUG=none DRY_RUN=true node ./index.js",
    "format": "standard --format --verbose | snazzy",
    "functional": "NODE_ENV=test NODE_PATH=./lib mocha $npm_package_options_mocha --slow 1000 test/functional",
    "lint": "standard --verbose | snazzy",
    "start": "NODE_PATH=./lib node --abort-on-uncaught-exception ./index.js",
    "start-json-output": "npm start 2>&1 | bunyan -o json-0 --strict",
    "test-watch": "rerun-script test",
    "test": "npm run lint && npm run unit && npm run functional",
    "unit": "NODE_ENV=test NODE_PATH=./lib mocha $npm_package_options_mocha test/unit"
  },
  "watches": {
    "test": [
      "*.js",
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "options": {
    "mocha": "--timeout 5000 --bail --recursive --reporter spec"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/CodeNow/khronos.git"
  },
  "author": "Casey Flynn <casey@runnable.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodeNow/khronos/issues"
  },
  "homepage": "https://github.com/CodeNow/khronos",
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "dependencies": {
    "101": "^1.0.0",
    "async": "^1.4.2",
    "bluebird": "^3.0.5",
    "bunyan": "^1.4.0",
    "commander": "^2.8.1",
    "dockerode": "^2.0.4",
    "keypather": "^1.10.1",
    "loadenv": "^1.1.0",
    "mongodb": "^2.0.43",
    "monitor-dog": "^1.4.1",
    "node-dogstatsd": "0.0.6",
    "ponos": "^1.1.0",
    "request": "^2.51.0",
    "runnable-hermes": "^6.2.1"
  },
  "devDependencies": {
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "docker-mock": "^5.0.2",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3",
    "nock": "^2.12.0",
    "rerun-script": "^0.6.0",
    "rewire": "^2.3.3",
    "sinon": "^1.12.1",
    "snazzy": "^2.0.1",
    "standard": "^5.3.1"
  }
}
