{
  "name": "khronos",
  "version": "1.7.2",
  "description": "Task Runner for various Runnable operations",
  "main": "index.js",
  "scripts": {
    "test-watch": "rerun-script test",
    "start": "node ./index.js",
    "test": "lab -v",
    "test-dry": "lab -d -v",
    "test-cov-html": "lab -r html -o coverage.html",
    "dry": "NODE_ENV=staging MANUAL_RUN=true DEBUG=none DRY_RUN=true node ./index.js",
    "lint": "eslint ."
  },
  "watches": {
    "test": [
      "*.js",
      "lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/CodeNow/docker-cron.git"
  },
  "author": "Casey Flynn <casey@runnable.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodeNow/khronos/issues"
  },
  "homepage": "https://github.com/CodeNow/khronos",
  "dependencies": {
    "101": "^1.0.0",
    "async": "^0.9.0",
    "bluebird": "^2.10.0",
    "bunyan": "^1.4.0",
    "callback-count": "^0.1.0",
    "dockerode": "^2.0.4",
    "keypather": "^1.10.1",
    "loadenv": "^1.0.3",
    "mongodb": "^1.4.29",
    "node-dogstatsd": "0.0.6",
    "request": "^2.51.0"
  },
  "devDependencies": {
    "chai": "^1.10.0",
    "docker-mock": "^2.1.0",
    "eslint": "^1.5.0",
    "lab": "^5.0.2",
    "nock": "^0.59.1",
    "rerun-script": "^0.6.0",
    "rewire": "^2.3.3",
    "sinon": "^1.12.1"
  }
}
